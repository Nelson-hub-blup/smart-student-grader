students = []

print("ğŸ“ Welcome to the Smart Student Grader App ğŸ“")

while True:
    print("\nWhat would you like to do?")
    print("1. Add a student result")
    print("2. View all student records")
    print("3. Exit")

    choice = input("Enter your choice (1â€“3): ")

    if choice == "1":
        name = input("Enter student name: ")
        subject = input("Enter subject: ")
        score = int(input("Enter score (0â€“100): "))

        if score >= 70:
            grade = "A"
        elif score >= 60:
            grade = "B"
        elif score >= 50:
            grade = "C"
        elif score >= 45:
            grade = "D"
        elif score >= 40:
            grade = "E"
        else:
            grade = "F"

        student = {
            "name": name,
            "subject": subject,
            "score": score,
            "grade": grade
        }

        students.append(student)
        print(f"âœ… {name}'s record added successfully!")

    elif choice == "2":
        if not students:
            print("ğŸ“­ No records found yet.")
        else:
            print("\nğŸ“š All Student Records:")
            for i, student in enumerate(students, start=1):
                print(f"{i}. {student['name']} - {student['subject']} - Score: {student['score']} - Grade: {student['grade']}")
                
    elif choice == "3":
        print("ğŸ‘‹ Exiting the app. Goodbye!")
        break
    else:
        print("âŒ Invalid choice. Try again.")
